@model Models.ChatModel
@{
    Layout = null;

}
<style>
    body {
        margin: 0px;
    }
</style>
@if (Model.Receiver != null)
{
    <iframe src="https://localhost:44394/chat/@Model.Receiver?token=@Model.Token" frameborder="0" style="overflow:hidden;height:100%;width:100%" height="100%" width="100%"></iframe>
}
else
{
    <iframe src="https://localhost:44394?token=@Model.Token" frameborder="0" style="overflow:hidden;height:100%;width:100%" height="100%" width="100%"></iframe>
}
